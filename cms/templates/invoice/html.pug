- var response = { orderSummary: '3 seconds for freetime' }
- var createdAt = '13 July, 2021'
- var price = '2,00 €'
- var priceTotal = '2,14 €' 
- var tax = '0,14 €'

include signature.pug
doctype html
head
  meta(charset='utf-8')
  title Invoice #{order.invoiceId}
  style.
    /* General styles */
    @font-face {
    font-family: Kalice;
    src: url(../Kalice-Regular.otf) format("opentype");
    font-weight: 400;
    }
    table {
    width: 100%;
    border-collapse: collapse;
    }
    td,
    th {
    text-align: left;
    }
    /* Element styles */
    .invoice-box {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 30px;
    border: 1px solid #eee;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
    line-height: 1.3;
    font-family: Arial, sans-serif;
    font-size: 16px;
    color: black;
    font-size: 70%;
    }
    .title-box {
    margin-bottom: 64px;
    text-align: center;
    }
    .title {
    font-family: Arial Black, sans-serif;
    font-size: 74px;
    text-decoration: underline;
    line-height: 1;
    margin-bottom: 10px;
    }
    .subtitle {
    font-family: 'Kalice', sans-serif;
    font-size: 27px;
    display: block;
    }
    .header {
    overflow: auto; /* clearfix */
    margin-bottom: 64px;
    }
    .left {
    float: left;
    }
    .right {
    float: right;
    }
    .thank-you {
    margin-top: 256px;
    }
    .bold {
    font-family: Arial Black, sans-serif;
    font-weight: 700;
    }
    .table {
    margin-bottom: 64px;
    }
    .table-last-row td {
    padding-top: 10px;
    }
    /* underline sum with two borders */
    .sum {
    border-top: 1px solid black;
    position: relative;
    }
    .sum:before {
    border-top: 1px solid black;
    content: "";
    display: block;
    position: absolute;
    top: 1px;
    left: 0;
    right: 0;
    }
    .sum:after {
    content: "";
    width:30%;
    height:4px;
    background-color: white;
    position: absolute;
    right:0;
    top:-1px;
    }
    .link-box {
    display: flex;
    align-items: flex-end;
    margin-bottom: 16px;
    }
    .qr-code {
    margin-right: 16px;
    }
    /* SIGNATURE */
    .signature-box {
    text-align: center;
    margin-bottom: 64px;
    }
    .signature {
    width: 200px;
    }
    .footer {
    /* position: absolute;
    left: 30px;
    bottom: 32px;
    */
    display: flex;
    justify-content: space-between;
    margin-bottom: 4px;
    }
.invoice-box
  .title-box
    div.title Time Sales Online
    div.subtitle  World leaders in the time business since 2018
  .header
    .left
      div
        div.bold To:
        | #{order.orderName}
        br
        |  #{order.orderEmail}
      div.thank-you
        div.bold Invoice
        | Thank you for your purchase at Time Sales Online.
        br
        | The payment has been accepted.
    .right
      div.bold Date
      |  #{createdAt}
      br
      br
      div.bold Adress
      | Geisselstraße 95
      br
      | 50823 Köln
      br
      br
      div.bold Contact us
      | hello@timesales.ltd
      br
      br
      div.bold Order ID
      | #{order.invoiceId}
      br
      br
      div.bold Bank Details
      | DEXXXXXXXXXXXXXXXXXX
      br
      | COXXXXXXXXXX
  table.table
    tr
      td.bold #{response.orderSummary}
      td
      td.bold #{price}
    tr
      td
      td (+ 7 % Mwst.)
      td #{tax}
    tr.table-last-row
      td
      td Total:
      td.bold.sum #{priceTotal}
  .link-box
    div.qr-code
      | !{qrcode}
    div
      | To access your custom time stream, scan the code or please follow this link:
      br
      a(href='#{order.streamUrl}') #{order.streamUrl}
  | On behalf of Time Sales Online
  br
  br
  br
  .signature-box
    +svg-signature(fill="blue", width="200", height="200")
    span.subtitle Thank you for your trust.
  .footer
    div SteuerNr.:XXXXXXXXX
    div IBAN: XXXXXXXXX
    div BIC: XXXXXXXXXX
