  title Invoice #{order.invoiceId}
  style.
    /* General styles */
    @font-face {
    font-family: Kalice;
    src: url(../Kalice-Regular.otf) format("opentype");
    font-weight: 400;
    }
    table {
    width: 100%;
    border-collapse: collapse;
    }
    td,
    th {
    text-align: left;
    }
    /* Element styles */
    .invoice-box {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 30px;
    border: 1px solid #eee;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
    line-height: 1.3;
    font-family: Arial, sans-serif;
    font-size: 16px;
    color: black;
    }
    .invoice-box h2 {
    font-family: Arial Black, sans-serif;
    margin: 0;
    font-size: 16px;
    }
    .title {
    margin-bottom: 64px;
    text-align: center;
    font-family: 'Kalice', sans-serif;
    font-size: 27px;
    }
    .title h1 {
    font-family: Arial Black, sans-serif;
    font-size: 80px;
    text-decoration: underline;
    line-height: 1;
    margin-bottom: 10px;
    }
    .header {
    overflow: auto; /* clearfix */
    margin-bottom: 64px;
    }
    .recipient {
    float: left;
    }
    .meta {
    float: right;
    }
    .text-box {
    margin-bottom: 128px;
    }
    .bold {
    font-family: Arial Black, sans-serif;
    font-weight: 700;
    }
    .table {
    margin-bottom: 128px;
    }
    .table-last-row td {
    padding-top: 10px;
    }
    /* underline sum with two borders */
    .sum {
    border-top: 1px solid black;
    position: relative;
    }
    .sum:before {
    border-top: 1px solid black;
    content: "";
    display: block;
    position: absolute;
    top: 1px;
    left: 0;
    right: 0;
    }
    .sum:after {
    content: "";
    width:30%;
    height:4px;
    background-color: white;
    position: absolute;
    right:0;
    top:-1px;
    }
    .link-box {
    margin-bottom: 128px;
    }
    .footer {
    /* position: absolute;
    left: 30px;
    bottom: 32px;
    */
    }
    .footer table {
    table-layout: fixed;
    }
    .footer td {
    line-height: 1.2;
    width: 33%;
    }
