{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "declaration": true,
    "outDir": "public/build/types",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "baseUrl": "src"
  },
  "include": ["src/types.d.ts", "src/frontend/index.ts"]
}
